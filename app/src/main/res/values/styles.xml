<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LifeTotalTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/life_total_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Styles for the increment and decrement (+ and -) for the life total, energy, and poison counters-->
    <style name="IncrementDecrementTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/plus_minus_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SecondaryTotalTextStyle">
        <item name="android:text">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/secondary_total_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Styles for control buttons including color change, reset, poison, and energy-->
    <style name="ControlButtonStyle">
        <item name="android:layout_marginRight">@dimen/control_button_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/control_button_margin_left</item>
        <item name="android:layout_height">@dimen/control_button_height</item>
        <item name="android:layout_width">@dimen/control_button_width</item>
    </style>

    <!--Styles for the Poison and Energy Logos within the Player One and Player Two Score Keeping area-->
    <style name="PoisonEnergyLogos">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/poison_energy_logo_height</item>
        <item name="android:layout_width">@dimen/poison_energy_logo_width</item>
    </style>

</resources>
