<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LifeTotalTextView">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/life_total_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Styles for the increment and decrement (+ and -) for the life total, energy, and poison counters-->
    <style name="IncrementDecrementTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/plus_minus_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SecondaryTotalTextStyle">
        <item name="android:text">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/secondary_total_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ControlButtonStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="PoisonEnergyLogos">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

</resources>
